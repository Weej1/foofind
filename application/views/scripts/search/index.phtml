<div id="container_search">

    <a href="/"><h1>FooFind.com</h1></a>

<?echo $this->form;?>

<?php if (count($this->paginator)): ?>

    <div class="search_info"><?=$this->info['total'] ?> files found , retrieved in <?=$this->info['time']; ?> secs. </div>
    
    <?=$this->paginationControl($this->paginator,'Sliding','paginator_search.phtml'); ?>

       <?php foreach ($this->paginator as $key => $val): ?>
        <div class="file_excerpt">
            <span><a href="/<?=$val['sources'][0]['Uri'] ?>"><?=$val['filenames'][0]['Filename'] ?></a></span>

	<ul style='display:none'>
            <?php foreach ($val['filenames'] as $filename): ?>
		<li><?=$filename['IdFile']?> | <?=$filename['Filename'] ?> | .<?=$filename['Extension'] ?></li>
            <?php endforeach; ?>

            <?php foreach ($val['sources'] as $source): ?>
		<li><?=$source['IdFile']?> | Type:<?=$source['Type'] ?> | Uri:<?=$source['Uri'] ?> | Sources:<?=$source['Sources'] ?></li>
	    <?php endforeach; ?>

            <?php foreach ($val['metadata'] as $md): ?>
		<li><?=$md['IdFile']?> | <?=$md['KeyMD'] ?>:<?=$md['ValueMD'] ?></li>
	    <?php endforeach; ?>
	</ul>
        </div>

        <?php endforeach; ?>

        <?=$this->paginationControl($this->paginator,'Sliding','paginator_search.phtml'); ?>
    
<?php else: ?>

    <h3><? echo 'No results. :-( ';?></h3>

<?php endif;?>


 

</div><!-- end of container_search --->
